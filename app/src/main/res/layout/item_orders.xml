<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="@dimen/margin_small">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_order_img"
            tools:src="@drawable/ic_restaurant_menu_black_24dp"
            android:layout_width="@dimen/menu_item_img_width"
            android:layout_height="@dimen/menu_item_img_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_small"/>

        <TextView
            android:id="@+id/item_order_txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            tools:text="food name"
            android:gravity="center"
            android:textColor="@color/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_order_img"/>

        <TextView
            android:id="@+id/item_order_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            tools:text="price"
            android:textColor="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_order_img"
            app:layout_constraintTop_toBottomOf="@+id/item_order_txt_name"/>

        <Button
            android:id="@+id/item_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cancelar item"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_order_img"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>